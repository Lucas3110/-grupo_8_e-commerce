<!DOCTYPE html>
<html lang="en">

<head>
    <!-- head -->
    <%- include('./partials/head') %>
        <link rel="stylesheet" href="/css/productlist.css">
        <title>productos</title>
</head>

<body>
    <header>
        <!-- header -->
        <%- include('./partials/header') %>
    </header>

    <main>
        <section class="last-visit">
            <h3>Genshin Collection</h3>
            <% coleccionJo.forEach(function(product){ let finalPrice=(product.precio * ((100 - product.discount) /
                100)).toFixed(0) %>
                <div class="products">
                    <article>
                        <a href="/productos/detail/<%= product.id %>">
                            <figure>
                                <img src="images/<%= product.image %>" class="product_img">
                            </figure>
                            <div class="main-article">
                                <p class="price">ETH <%= toThousand(finalPrice) %>
                                </p>
                                <h4 class="description">
                                    <%= product.descripcion %>
                                </h4>
                            </div>
                        </a>
                    </article>
                </div>
                <% }) %>
        </section>
        <section class="offers">
            <h3>Van Gogh Collection</h3>
            <div class="products">
                <article>
                    <img src="images/coleccion-jessi/VanGogh1.jpg" alt="VanGogh1" class="product_img">
                    <div class="main-article">
                        <p class="price">ETH 0,020</p>
                        <p class="discount"></p>
                        <h4 class="description">Van Gogh Azzurro medio</h4>
                    </div>
                </article>
                <article>
                    <img src="images/coleccion-jessi/VanGogh2.jpg" alt="VanGogh2" class="product_img">
                    <div class="main-article">
                        <p class="price">ETH 0,001</p>
                        <p class="discount">10% off</p>
                        <h4 class="description">Van Gogh inspiration</h4>
                    </div>
                </article>
                <article>
                    <img src="images/coleccion-jessi/VanGogh3.jpg" alt="VanGogh3" class="product_img">
                    <div class="main-article">
                        <p class="price">ETH 0,010</p>
                        <p class="discount">10% off</p>
                        <h4 class="description">Van Goghh Purple tibio</h4>
                    </div>
                </article>
                <article>
                    <img src="images/coleccion-jessi/VanGogh4.jpg" alt="VanGogh4" class="product_img">
                    <div class="main-article">
                        <p class="price">ETH 0,003</p>
                        <p class="discount">5% off</p>
                        <h4 class="description">Van Gogh incredible </h4>
                    </div>
                </article>
            </div>
        </section>
    </main>

    <footer>
        <!-- footer -->
        <%- include('./partials/footer') %>
    </footer>
</body>