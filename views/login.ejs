<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- head --> <%- include('./partials/head') %>  
        <link rel="stylesheet" href="/css/login.css">
        <title>login</title>
      </head>
        <!-- header --> <%- include('./partials/header') %>
      <body class="bodylogin">        
        <% if(typeof user !='undefined'){ %>
            <p>Hola <%= user.nombre %> <%= user.apellido %>, tenes la categoria <%= user.categoria %> y tu email es: <%= user.email %></p>
        <% } %>  
        
          <% if (typeof errors != 'undefined') { %>
            <p style="color: red">ERROR</p>
            <ul>
                <% for (let i = 0; i < errors.length; i++) { %>
                    <li>
                        <%=errors[i].msg%>
                    </li>
                <% } %>
            </ul>
         <% } %>

      <section class="sectionlogin">
        <login>
            <h2 class="inicio">
                Inicia sesión con:
            </h2>
                <button type="button">
                      Gmail    
                </button>
                <br></br>
                <button type="button">
                    <i class="fi fi-rr-bank"></i> Wallet     
                </button>
              </div>
               
        <form action="/users" method="POST">
            <h2 class="Registrarse">
                Ingresa a tu cuenta: 
            </h2>
                <div id="form">
                    <input type="email" name="email">     
                </div>
                <div id="form">
                    <input type="password" name="contrasena">          
                </div>
                
                <div class="recuerdame">
                <input id="recordarme" name="recordarme" type="checkbox" value="1" checked="checked">
                <label class="recordarme" for="recordarme">Recordarme</label>
                </div>   

                <div class="olvido">
                    <a href="#" class="textolvido">¿Olvidaste tu Contraseña?</a>
                </div>
                
                    <button type="submit" class="registro">
                        Iniciar Sesión 
                    </button>

                <div class="crearcuenta">
                    <p class="nuevacuenta">¿No tienes una cuenta?</p>
                    <a href="/users/register" class="crear">Crear cuenta </a>
                </div>
        </form>         

        </login>
    </section>
 
    <!-- footer --> <%- include('./partials/footer') %>

</body>